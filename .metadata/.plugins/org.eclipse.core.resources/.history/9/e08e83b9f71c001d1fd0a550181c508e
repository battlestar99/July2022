//		System.out.println(c[2]);
//		System.out.println(c[3]);
//		System.out.println(c[4]);
		//Array & loop
		// whenever you get the value you have to break the loop
		//break;
		for (int i=0; i<5; i++) {
			if(c[i] == 200) {
				System.out.println("200 is available");
				break;
			}else {
				System.out.println("200 is not available");
			}

		}
		
		// create an array with 5 names
		// print the values of that array using a loop
		
		
//		System.out.println(0);
//		System.out.println(1);
//		System.out.println(2);
