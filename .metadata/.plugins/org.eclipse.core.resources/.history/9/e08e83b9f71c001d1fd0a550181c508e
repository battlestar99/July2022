package samplePackage;

public class ArrayAndLoop {

	public static void main(String[] args) {
				
		int[] c = new int[5];
		
		c[0] = 1000;
		c[1] = 100;
		c[2] = 200;
		c[3] = 300;
		c[4] = 400;
		
//		if(c[0] == 200) {
//			System.out.println("200 is available");
//		}else {
//			System.out.println("200 is not available");
//		}
//		System.out.println(c[0]);
